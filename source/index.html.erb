<% blog.articles.each do |article| %>
  <% unless article.tags.include?("draft") %>
    <div class="post">
      <h6 class="subtitle is-6 is-uppercase"><time><%= article.date.strftime('%b %e, %Y') %></time></h6>

      <div class="tags">
        <% article.tags.each do |tag| %>
          <span class="tag is-light is-uppercase"><%= tag %></span>
        <% end %>
      </div>

      <h1>
        <a href="<%= article.url %>">
          <%= article.title %>
        </a>
      </h1>

      <%= article.summary(500) %>
      <p class="has-text-centered">
      <%= link_to "Read more", article, class: "button is-small is-uppercase" %>
      </p>
    </div>
  <% end %>
<% end %>

<p class="has-text-centered mt-6">
  <a href="https://www.instagram.com/moviendome/">
    <%= image_tag('icons/instagram.svg', width: '30px') %>
  </a>
</p>
